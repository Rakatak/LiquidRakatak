<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rakatak.liquidrakatak.ArticleDetailActivity"
    android:background="@drawable/background_01">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="&lt;articleTitle>"
        android:id="@+id/articleTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:maxLines="2" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="182dp"
        android:id="@+id/articleImage"
        android:layout_below="@+id/articleTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:contentDescription="articleImage"
        android:focusableInTouchMode="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Videogame"
        android:id="@+id/articleType"
        android:textColor="#ffffffff"
        android:singleLine="true"
        android:layout_alignTop="@+id/articleImage"
        android:layout_toEndOf="@+id/articleImage"
        android:layout_marginLeft="15dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price:"
        android:id="@+id/articlePrice"
        android:textColor="#ffffffff"
        android:singleLine="false"
        android:layout_below="@+id/articleType"
        android:layout_alignStart="@+id/articleType"
        android:layout_marginTop="10dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Platform:"
        android:id="@+id/articlePlatform"
        android:textColor="#ffffffff"
        android:singleLine="false"
        android:textSize="17dp"
        android:layout_below="@+id/articlePrice"
        android:layout_alignStart="@+id/articlePrice"
        android:layout_marginTop="10dp"
        android:maxLines="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Available:"
        android:id="@+id/articleAvailable"
        android:textColor="#ffffffff"
        android:singleLine="true"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/articlePlatform"
        android:layout_alignStart="@+id/articlePlatform"
        android:maxLines="2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase"
        android:id="@+id/btnPurchase"
        android:layout_alignParentBottom="false"
        style="@style/centerButtonStyle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/articleImage" />
</RelativeLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="centerButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/abc_ab_share_pack_mtrl_alpha</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="articleGrid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:rowCount">3</item>
        <item name="android:columnCount">3</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:columnOrderPreserved">true</item>
        <item name="android:rowOrderPreserved">true</item>
        <item name="android:useDefaultMargins">true</item>
    </style>

    <style name="scrollo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
